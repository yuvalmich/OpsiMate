{
	"name": "@OpsiMate/server",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"debug": "node --inspect=0.0.0.0:9229 dist/index.js",
		"build": "vite build --config vite.config.prod.ts",
		"build-dev": "vite build --mode development",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"dev": "vite",
		"lint": "eslint src --ext .ts",
		"lint-fix": "eslint src --ext .ts --fix",
		"format": "prettier --check .",
		"format-fix": "prettier --write .",
		"check": "npm run format && npm run lint",
		"fix": "npm run format-fix && npm run lint-fix"
	},
	"dependencies": {
		"@OpsiMate/shared": "workspace:*",
		"@OpsiMate/custom-actions": "workspace:*",
		"@kubernetes/client-node": "^1.3.0",
		"@types/cors": "^2.8.19",
		"@types/jsonwebtoken": "^9.0.10",
		"bcrypt": "^6.0.0",
		"better-sqlite3": "^12.2.0",
		"cors": "^2.8.5",
		"express": "^4.19.2",
		"express-promise-router": "^4.1.1",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.2",
		"node-ssh": "^13.1.0",
		"nodemailer": "^7.0.9",
		"axios": "^1.7.9",
		"sshpk": "^1.18.0",
		"vite": "^7.1.11",
		"vite-plugin-node": "^7.0.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^4.17.21",
		"@types/express-promise-router": "^2.0.1",
		"@types/js-yaml": "^4.0.9",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.5.5",
		"@types/nodemailer": "^7.0.2",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.9.0",
		"supertest": "^7.1.3",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.5.3",
		"vitest": "^3.2.4"
	}
}
