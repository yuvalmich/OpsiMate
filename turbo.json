{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint-fix": {
      "dependsOn": [
        "^lint-fix"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "format-fix": {
      "dependsOn": [
        "^format-fix"
      ]
    },
    "check": {
      "dependsOn": [
        "^check"
      ]
    },
    "fix": {
      "dependsOn": [
        "^fix"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "env": [
        "NODE_ENV"
      ]
    },
    "debug": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    }
  }
} 