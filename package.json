{
  "name": "OpsiMate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "pnpm --filter @OpsiMate/server start",
    "dev": "turbo run dev",
    "dev:clean": "pnpm run clean:cache && pnpm run dev",
    "debug": "turbo run debug",
    "clean": "turbo run clean",
    "clean:cache": "rm -rf apps/client/node_modules/.vite apps/client/.vite apps/server/node_modules/.vite apps/server/.vite node_modules/.cache",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix",
    "format": "turbo run format",
    "format-fix": "turbo run format-fix",
    "check": "turbo run check",
    "fix": "turbo run fix"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4"
  },
  "packageManager": "pnpm@9.12.0"
}
